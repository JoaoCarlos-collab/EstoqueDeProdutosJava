import java.util.ArrayList;
import java.util.Scanner;

public class Produto_test{

    public static void main (String [] args){
        Scanner input = new Scanner(System.in);
        ArrayList <Produto> Estoque = new ArrayList<>();

        int continuar = 1;
        while (continuar == 1) { 
     
            System.out.print("Digite seu produto: ");
            String nome_digitado = input.nextLine();

            System.out.print("Digite o preço do seu produto: ");
            double preco_digitado = input.nextDouble();
            input.nextLine();

            Produto produto1 = new Produto(nome_digitado, preco_digitado);
            produto1.Exibicao();

            System.out.println("Você deseja adicionar outro produto ?\nSe sim digite (1), Se não digite (0).");
            continuar = input.nextInt();
            input.nextLine();
        }
    }
}
